doctype html
html(lang='en', ng-app='cuponeraApp' flow-init="{target: '/admin/upload'}" 
								  flow-file-added='!!{png:1,gif:1,jpg:1,jpeg:1}[$file.getExtension()]')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
		title= title
		link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
		link(rel='stylesheet' href='/stylesheets/style.css')
		
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular.min.js')
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-route.js')
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js')
		script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		//script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js')
		//script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular-resource.min.js')
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
		script(src='/javascripts/ng-flow-standalone.js')
		script(src='/javascripts/app.js')
		script(src='/javascripts/controller.js')
		script(src='/javascripts/service.js')
		script(src='/socket.io/socket.io.js')
		
	body(ng-controller="CuponUploadController" flow-prevent-drop
      flow-drag-enter="style={border: '5px solid green'}"
      flow-drag-leave="style={}"
      ng-style="style")
		nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
			div.navbar-header
				a.navbar-brand(href='#/cuponera') CUPONERA
			ul.nav.navbar-nav
				li
					a(href='#/upload') Registrar Cupón
				li
					a(href='#/imagenes') Cupones
				li
					a(href='#/nuevoUsuario') Nuevo Usuario
				li
					a(href='#/nuevoCupon') Registrar Cupón
		div.container
			div(ng-view)